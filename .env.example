# Vector Database Configuration
VECTOR_DB_TYPE=chromadb  # Options: chromadb, pinecone, faiss, qdrant
CHROMA_PERSIST_DIR=./chroma_db
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key

# Model Configuration
EMBEDDING_MODEL=clap  # Options: clap, audio_only
CLAP_MODEL_NAME=laion/larger_clap_music
TEXT_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
AUDIO_MODEL_NAME=panns  # Options: panns, vggish, openl3, wav2vec2

# Audio Processing
SAMPLE_RATE=44100
AUDIO_DURATION=10  # seconds
N_MELS=128
HOP_LENGTH=512

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Data Paths
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
METADATA_PATH=./data/metadata
EMBEDDINGS_PATH=./outputs/embeddings

# Retrieval Configuration
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.7
DISTANCE_METRIC=cosine  # Options: cosine, euclidean, dot_product

# Logging
LOG_LEVEL=INFO
LOG_FILE=./outputs/logs/app.log

# Scraper Configuration
SPLICE_USERNAME=your_splice_username
SPLICE_PASSWORD=your_splice_password
SCRAPER_DELAY=2  # seconds between requests
